<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:WpfMath.Controls;assembly=WpfMath">

    <DataTemplate x:Key="SeceneklerDataTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <ItemsControl Background="AliceBlue" ItemsSource="{Binding DataContext.secenekler.secenekler, RelativeSource={RelativeSource AncestorType=Window}}"
                      Grid.Row="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="AktifSecenekler" 
                                     Command="{Binding DataContext.SecimDegistir, RelativeSource={RelativeSource AncestorType=Window}}" 
                                     CommandParameter="{Binding .}"
                                     
                            FontSize="12" Margin="20,5,5,5">

                            <Controls:FormulaControl Formula="{Binding .}"/>
                            
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Grid.Row="1" Content="Cevapla" 
                    Command="{Binding DataContext.SoruCevapla, Mode=TwoWay ,RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="Proompter">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Proomptlayıcı" FontSize="8"/>

            <TextBox Text="NOTHOUGHTONLYPROOMPTNOTHOUGHTONLYPROOMPTNOTHOUGHTONLYPROOMPTNOTHOUGHTONLYPROOMPTNOTHOUGHTONLYPROOMPTNOTHOUGHTONLYPROOMPTNOTHOUGHTONLYPROOMPT"
                                 MaxLength="400"
                                 Grid.Row="1"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
   