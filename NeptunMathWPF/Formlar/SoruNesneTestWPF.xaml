<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeptunMathWPF.Formlar"
        xmlns:Controls="clr-namespace:WpfMath.Controls;assembly=WpfMath" x:Class="NeptunMathWPF.Formlar.SoruNesneTestWPF"
        mc:Ignorable="d"
        Title="SoruNesneTestWPF" Height="450" Width="800" Foreground="Black">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="242"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="181*"/>
            <RowDefinition Height="164*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Soru Oluşturma TEST paneli" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="74" Margin="0,30,0,0" Grid.RowSpan="2"/>
        <Controls:FormulaControl x:Name="LatexCikti" Formula="\left(x^2 + 2 \cdot x + 2\right) = 0" Grid.Column="1" Margin="24,28,34,115" Grid.Row="2" Scale="21"/>
        <ScrollViewer Grid.RowSpan="5">
            <StackPanel>
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA1A1A1"/>
                        <GradientStop Color="#FFFFE0E0" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Expander Header="Soru Özellikleri">
                    <StackPanel Height="221" Background="#FFF4F4F4">
                        <Label Content="İfade Sayısı" HorizontalAlignment="Left"/>
                        <Slider x:Name="sliderIfade" IsSnapToTickEnabled="True" TickFrequency="1" Minimum="2" Value="4"/>
                        <Label Content="Şık Sayısı" HorizontalAlignment="Left"/>
                        <Slider x:Name="sliderSecenek" Value="4" Maximum="7" IsSnapToTickEnabled="True" TickFrequency="1" Minimum="2"/>
                        <ComboBox x:Name="comboBoxParametreler" Width="120" SelectionChanged="comboBoxParametreler_SelectionChanged"/>
                        <Label Content="Parametreler Min() Max()"/>
                        <TextBox x:Name="min" TextWrapping="Wrap" Text="" Width="53" PreviewTextInput="SayiGozleyici"/>
                        <TextBox x:Name="max" TextWrapping="Wrap" Text="" Width="53" Margin="0,12,0,0" PreviewTextInput="SayiGozleyici"/>
                    </StackPanel>
                </Expander>
                <Button Content="Tam Sayi Soru Olustur" Height="43" Margin="2,10,2,0" Click="TusTamSayiSoruOlustur"/>
                <Button Content="Kesir Soru Olustur" Height="38" Margin="2,5,2,0" Click="TusKesirSayiOlustur"/>
                <Button Content="Fonksiyon Sorusu Oluştur" Height="38" Margin="2,5,2,0" Click="TusFonksiyonSoruOlustur"/>

                <Expander Header="Coklu İfade">
                    <StackPanel Background="White">
                        <ListBox x:Name="CokluIfadeListBox" Height="100" KeyDown="CokluIfadeListBox_KeyDown" />
                        <ComboBox x:Name="CokluIfadeComboBox" Width="120"/>
                        <Button Content="Ekle" Margin="6,0,6,0" Click="TusEkleClick"/>
                    </StackPanel>
                </Expander>
                <Button x:Name="CokluSoruOlustur" Content="Coklu İfade Soru Olustur" Height="36" Margin="2,10,2,0" Click="TusCokluIfadeSoruOlustur"/>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Grid.Column="2" Grid.Row="1" Margin="0,29,0,0" Grid.RowSpan="2">
            <TextBlock x:Name="SoruLOG" TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer Grid.Column="1" Grid.Row="3" Margin="0,20,0,0">
            <WrapPanel x:Name="SeceneklerWrapPanel"/>
        </ScrollViewer>
        <Button x:Name="tusCevapla" Grid.Column="1" Content="Cevapla" HorizontalAlignment="Left" Margin="298,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="100" Click="tusCevapla_Click"/>

    </Grid>
</Window>
