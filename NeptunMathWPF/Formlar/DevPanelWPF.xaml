<Window x:Class="NeptunMathWPF.Formlar.DevPanelWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeptunMathWPF.Formlar"
        mc:Ignorable="d"
        Background="LightSteelBlue"
        Title="Geliştirici Panel" Height="500" Width="840" MinHeight="500" MinWidth="840">
    
    <Grid Margin="5" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="53"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Group Boxın Fonksiyonel işlevi yok gibi görünüyor yoruma aldım-->
        <!--<GroupBox Header="İşlemler" Margin="10,0,10,86" Grid.ColumnSpan="2"/>-->

        <Label Content="İşlemler" FontWeight="SemiBold" Background="LightSteelBlue" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>

        <Button x:Name="TopicsPanel" Background="AliceBlue" Content="Konu-Alt Konu" HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Bottom" Height="39" Width="92" Click="TopicsPanel_Click" Grid.Column="1"/>
        <Button x:Name="QPoolPanel" Background="AliceBlue" Content="Soru Havuzu" HorizontalAlignment="Left" Margin="121,0,0,0" VerticalAlignment="Bottom" Height="39" Width="92" Click="QPoolPanel_Click" Grid.Column="1"/>

        <ContentControl x:Name="content1" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
