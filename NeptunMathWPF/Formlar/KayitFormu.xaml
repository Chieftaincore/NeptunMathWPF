<Window x:Class="AnasayfaWPF.KayitFormu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kayıt Ol" Height="540" Width="340" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Border Padding="20">
        <StackPanel>
            <Label Content="*YENİ HESAP OLUŞTUR*" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="#2c3e50" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

            <TextBlock Text="Kullanıcı Adı:" Margin="0,0,0,5"/>
            <TextBox x:Name="KayitKullaniciAdiTxt" Padding="5" MaxLength="30" Margin="0,0,0,10"/>

            <TextBlock Text="Şifre:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="KayitSifreTxt" MaxLength="50" Padding="5" Margin="0,0,0,10"/>

            <TextBlock Text="Şifre Tekrar:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="KayitSifreTekrarTxt" MaxLength="50" Padding="5" Margin="0,0,0,10"/>

            <TextBlock Text="E-posta:" Margin="0,0,0,5"/>
            <TextBox x:Name="KayitEpostaTxt" MaxLength="150" Padding="5" Margin="0,0,0,10"/>

            <TextBlock Text="İsim:" Margin="0,0,0,5"/>
            <TextBox x:Name="KayitIsimTxt" MaxLength="50" Padding="5" Margin="0,0,0,10"/>

            <TextBlock Text="Soyisim:" Margin="0,0,0,5"/>
            <TextBox x:Name="KayitSoyisimTxt"  MaxLength="50" Padding="5" Margin="0,0,0,20"/>

            <Button Content="Kayıt Ol" Height="35" 
                    Background="#f44336" Foreground="White" 
                    FontWeight="SemiBold" BorderBrush="#d32f2f" 
                    Click="KayitOlButton_Click" 
                    HorizontalAlignment="Center" Width="178"/>
        </StackPanel>
    </Border>
</Window>
