<Window x:Class="NeptunMathWPF.TestPencereWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeptunMathWPF"
        mc:Ignorable="d"
        Title="TestPencereWPF" Height="450" Width="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFFF2323" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="tusLaTeXtestformu" Grid.Column="1" Content="Latex Test Formu" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.606,0.353" Height="49" Width="148" Click="LaTeXtestformuTikla"/>
        <Button x:Name="tusLaTeXtestformu_Kopyala" Grid.Column="1" Content="Rastgele Basit Soru" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.606,0.353" Height="49" Width="148" Click="BasitSoruTus"/>

        <Button x:Name="FormlarAc" Content="Formları Aç" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Background="DarkSlateBlue" Foreground="White" Height="49" Width="148" Click="FormlarAc_Click" Grid.Column="1" />

    </Grid>
</Window>
