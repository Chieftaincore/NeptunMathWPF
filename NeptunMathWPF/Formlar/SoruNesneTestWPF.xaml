<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeptunMathWPF.Formlar"
        xmlns:Controls="clr-namespace:WpfMath.Controls;assembly=WpfMath" x:Class="NeptunMathWPF.Formlar.SoruNesneTestWPF"
        mc:Ignorable="d"
        Title="SoruNesneTestWPF" Height="450" Width="800" Foreground="Black">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="527*"/>
            <ColumnDefinition Width="163"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="232*"/>
            <RowDefinition Height="114*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Soru Oluşturma TEST paneli" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="74"/>

        <Controls:FormulaControl x:Name="LatexCikti" Formula="\left(x^2 + 2 \cdot x + 2\right) = 0" Grid.Column="1" Margin="24,28,34,115" Grid.Row="2"/>
        <Expander HorizontalAlignment="Center" Header="Soru Türleri" VerticalAlignment="Top" Grid.RowSpan="5" Background="White" RenderTransformOrigin="0,0.5" BorderBrush="Black">
            <StackPanel Height="264">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFE8FFE1" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <ComboBox Width="108"/>
                <Button Content="Button" Width="108" Height="26" BorderBrush="{x:Null}"/>
                <ListBox Height="176" d:ItemsSource="{d:SampleData ItemCount=5}" Width="108"/>
            </StackPanel>
        </Expander>

    </Grid>
</Window>
