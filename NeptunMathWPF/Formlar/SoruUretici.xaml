<Window x:Class="AnaSayfaForm.SoruFormu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Soru Formu" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Sorunuzu Girin:" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="1" x:Name="SoruTextBox" Width="400" Height="200" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Button Grid.Row="2" Content="Gönder" Click="GonderButton_Click" Margin="10" Padding="10" FontSize="16" FontWeight="SemiBold" Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center"/>
    </Grid>
</Window>