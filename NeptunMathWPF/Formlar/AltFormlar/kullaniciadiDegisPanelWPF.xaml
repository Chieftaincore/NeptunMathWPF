<Window x:Class="NeptunMathWPF.Formlar.kullaniciadiDegisPanelWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kullanıcı Adı Değiştirme Paneli"
        Height="250"
        Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="                    Şifre:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <PasswordBox x:Name="sifreOnayPasswordBox" Width="200" MinHeight="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Yeni Kullanıcı Adı:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="yeniKullaniciAdiTextBox" Width="200" MinHeight="25"/>
            </StackPanel>

            <Button x:Name="kullaniciAdiDegisButton"
                    Content="Kullanıcı Adı Değiştir"
                    Width="200"
                    MinHeight="35"
                    Click="kullaniciAdiDegisButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
