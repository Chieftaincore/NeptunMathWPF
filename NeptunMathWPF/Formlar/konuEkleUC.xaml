<UserControl x:Class="NeptunMathWPF.Formlar.konuEkleUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeptunMathWPF.Formlar"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="747">
    <Grid Margin="0,0,-48,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="223*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <GroupBox
            Width="242" Margin="47,38,0,22" Header="KONU ve ALT KONU EKLEME&#xA;" HorizontalAlignment="Left"/>
        <TextBox
            Width="120" VerticalAlignment="Top" TextWrapping="Wrap" x:Name="topicTextBox" Margin="159,76,0,0" HorizontalAlignment="Left"/>
        <TextBox
            Width="120" VerticalAlignment="Top" TextWrapping="Wrap" x:Name="subtopicTextBox" Margin="157,235,0,0" HorizontalAlignment="Left"/>
        <Label
            VerticalAlignment="Top" Margin="65,221,0,0" HorizontalAlignment="Left" Content="ALT KONU"/>
        <Button
            Width="90" VerticalAlignment="Top" x:Name="addTopicButton" Margin="65,122,0,0" Height="24" HorizontalAlignment="Left" Content="Konu Ekle" Click="addTopicButton_Click"/>
        <Button
            Width="90" VerticalAlignment="Top" x:Name="addSubtopicButton" Margin="62,287,0,0" Height="24" HorizontalAlignment="Left" Content="Alt Konu Ekle" Click="addSubtopicButton_Click"/>
        <ComboBox
            Width="120" VerticalAlignment="Center" x:Name="topicComboBox" Margin="157,0,0,0" HorizontalAlignment="Left"/>
        <Label x:Name="konulbl2"
            VerticalAlignment="Top" Margin="66,190,0,0" HorizontalAlignment="Left" Content="KONU"/>
        <Button
            Width="96" VerticalAlignment="Top" x:Name="rmvTopicButton" Margin="420,129,0,0" Height="24" HorizontalAlignment="Left" Content="Konu Sil" Click="rmvTopicButton_Click"/>
        <Label x:Name="konulbl2_Copy"
            VerticalAlignment="Top" Margin="67,62,0,0" HorizontalAlignment="Left" Content="KONU"/>
        <Rectangle HorizontalAlignment="Left" Height="393" Margin="300,41,0,0" Stroke="Black" VerticalAlignment="Top" Width="6" Fill="Black" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="konulbl2_Copy1"
            VerticalAlignment="Top" Margin="338,83,0,0" HorizontalAlignment="Left" Content="KONU"/>
        <GroupBox Header="KONU ve ALT KONU SİLME" Margin="317,48,254,22"/>
        <ComboBox
            Width="120" VerticalAlignment="Top" x:Name="topicComboBox2" Margin="396,85,0,0" HorizontalAlignment="Left"/>
        <ComboBox x:Name="subtopicComboBox" HorizontalAlignment="Left" Margin="396,255,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Alt Konu" HorizontalAlignment="Left" Margin="332,253,0,0" VerticalAlignment="Top"/>
        <Button x:Name="rmvSubtopicButton" Content="Alt Konu Sil" HorizontalAlignment="Left" Margin="429,287,0,0" VerticalAlignment="Top" Width="87" Height="24" Click="rmvSubtopicButton_Click"/>

    </Grid>
</UserControl>
