<Window x:Class="AnasayfaWPF.AnaSayfa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ana Menü" WindowState="Maximized" Height="450" Width="900"
        Background="White">

    <Grid Margin="5" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.RowSpan="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Column="0" Background="#FF213447">

                <Label Content="NeptunMath" FontSize="16" FontWeight="Bold" FontStyle="Italic" Foreground="White" Margin="0,20,0,20" HorizontalAlignment="Center"/>

                <Button Content="Özel Session" Click="SoruButton_Click" Margin="10" Padding="15" FontSize="18" FontWeight="SemiBold" Background="#4CAF50" FontStyle="Italic" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                <Button Content="[Geliştirici]" Click="SoruUreticiButton_Click" Margin="10" Padding="15" FontSize="18" FontWeight="SemiBold" Background="#2196F3" FontStyle="Italic" Foreground="White" BorderThickness="0" Cursor="Hand"/>

                <Button Content="Ayarlar" Click="AyarlarFormu_Click" Margin="10" Padding="15" FontSize="18" FontWeight="SemiBold" Background="DimGray" FontStyle="Italic" Foreground="White" BorderBrush="Black" BorderThickness="1" Cursor="Hand"/>
                <Button Content="Oturumu Kapat" Click="OturumuKapat_Click"  Margin="10" Padding="15" FontSize="12" FontWeight="SemiBold" Background="#f92020" FontStyle="Italic" Foreground="White" BorderBrush="DarkRed" BorderThickness="1" Cursor="Hand"/>

            </StackPanel>
        </ScrollViewer>

        <TabControl Background="#FF213447" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2">

            <TabItem Header="Session" Padding="8" Background="AliceBlue">

                <ScrollViewer>
                    <Grid Background="WhiteSmoke">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Label VerticalAlignment="Top" Content="Etkileşim/Session" FontSize="20" FontWeight="DemiBold" Background="#FF213447" Foreground="White" Grid.Row="0" Grid.ColumnSpan="2" Height="37"/>

                        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">

                            <ComboBox Margin="30,10" Height="22"/>

                            <Button Content="Konu Ekle" Height="30" Margin="30,10"
                                    Background="AliceBlue" FontStyle="Italic" FontWeight="SemiBold"/>

                        </StackPanel>

                    </Grid>
                </ScrollViewer>

            </TabItem>


            <TabItem Header="Hakkında" Padding="8" Background="AliceBlue">
                <StackPanel Background="White">
                    <Image Source="/Kaynaklar/Resimler/Neptun Math.png" Width="404" Height="215"/>
                    <TextBlock Text="Uygulamaya Hoş Geldiniz!" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Lütfen bir seçenek belirleyin." HorizontalAlignment="Center" FontSize="12" Foreground="#555"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>