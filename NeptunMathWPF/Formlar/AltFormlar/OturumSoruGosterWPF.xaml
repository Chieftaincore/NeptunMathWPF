<Window x:Class="NeptunMathWPF.Formlar.AltFormlar.OturumSoruGosterWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeptunMathWPF.Formlar.AltFormlar"
        xmlns:model="clr-namespace:NeptunMathWPF.Formlar.EtkilesimWPF.MVVM.Model"
        mc:Ignorable="d"
        Background="LightSteelBlue"
        Title="OturumSoruGosterWPF" Height="450" Width="600">

    <Window.Resources>
    <model:SoruCardSelector x:Key="SoruStyleTemplateModel"
                                  LaTeXStyle="{StaticResource SoruCard}"
                                  MetinStyle="{StaticResource SoruCardMetin}"/>
    </Window.Resources>

    <Grid Background="White" Margin="5">

        <ScrollViewer PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <ListView x:Name="listViewSorular" ItemContainerStyleSelector="{StaticResource SoruStyleTemplateModel}">

            </ListView>
        </ScrollViewer>
        
    </Grid>
</Window>
