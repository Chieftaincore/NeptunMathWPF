<Window x:Class="NeptunMathWPF.TestPencereWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeptunMathWPF"
        mc:Ignorable="d"
        Title="TestPencereWPF" Height="450" Width="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFFF2323" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="tusLaTeXtestformu" Grid.Column="1" Content="Latex Test Formu" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.606,0.353" Height="49" Width="148" Click="LaTeXtestformuTikla"/>
        <Button x:Name="soruUreticiPanel_Huseyin_" Grid.Column="1" Content="Soru Test Paneli" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.606,0.353" Height="49" Width="148" Click="SoruTestPaneliTikla"/>
        <Button x:Name="tusEtkilesimSayfasi" Grid.Column="1" Content="Etkileşim Sayfası" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.606,0.353" Height="49" Width="148" Click="EtkilesimSayfasi_Click"/>
        <Button x:Name="tusEtkilesimSayfasi_Copy" Grid.Column="1" Content="Etkileşim Sayfası" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.606,0.353" Height="49" Width="148" Click="EtkilesimSayfasi_Click"/>
        <Button x:Name="fonksiyonSayfasi" Content="Fonksiyon Test" HorizontalAlignment="Center" Margin="0,172,0,0" VerticalAlignment="Top" Height="49" Width="148" Grid.Column="1" Click="fonksiyonSayfasi_Click"/>
        <Button x:Name="dbTestButton" Content="Veritabanı Test" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" Width="148" Height="49" Grid.Column="1" Click="dbTestButton_Click"/>
        <Image Margin="-9,20,0,61" Source="/Kaynaklar/Resimler/Neptun Math.png" Stretch="Fill"/>
        <Button x:Name="ApiTest" Content="API Test" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Width="148" Height="49" Grid.Column="1" Click="apiTest_Click"/>

    </Grid>
</Window>
