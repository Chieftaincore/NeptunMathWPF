<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:WpfMath.Controls;assembly=WpfMath">

    <Style TargetType="ListViewItem" x:Key="RaporCard">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="AliceBlue"
                    Margin="30,5,30,10">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="25"/>
                                <RowDefinition Height="18*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="24"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>

                            <Menu Grid.Row="0" Grid.Column="0" Background="LightSteelBlue" Grid.ColumnSpan="2">
                                <MenuItem Header="Veritabanı"/>
                            </Menu>

                            <Label Background="{Binding TabBrush, FallbackValue='SlateGray'}" VerticalAlignment="Bottom" Height="6" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                            <Controls:FormulaControl Formula= "{Binding LaTeX, FallbackValue='Debug: Bilgi Yok'}"
                                                     FontSize="20"
                                                     Grid.Row="1"
                                                     Grid.Column="0"
                                                     Margin="40,10,5,5"
                                                     Padding="5"/>

                            <StackPanel Grid.Row="2">

                                <Label Content="Cevaplanan : "/>
                                <TextBlock Text="{Binding Cevaplanan}" Foreground="{Binding TabBrush, FallbackValue='Black'}" TextWrapping="Wrap" Margin="15,5,5,20" FontSize="15" FontWeight="Bold"/>

                                <Label Content="Cevap : "/>
                                <TextBlock Text="{Binding Sonuc}" TextWrapping="Wrap" Margin="15,5,5,20" FontSize="15" FontWeight="Bold"/>

                                <Label Content="Diğer : "/>
                                <ListBox ItemsSource="{Binding DigerSecenekler}" Margin="15,5,5,20" FontSize="15" FontWeight="Bold">

                                </ListBox>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListViewItem" x:Key="RaporCardMetin">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="AliceBlue"
                    Margin="30,5,30,10">
                        
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="25"/>
                                <RowDefinition Height="18*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="24"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>

                            <Menu Grid.Row="0" Grid.Column="0" Background="LightSteelBlue" Grid.ColumnSpan="2">
                                <MenuItem Header="Veritabanı"/>
                            </Menu>

                            <Label Background="{Binding TabBrush, FallbackValue='SlateGray'}" VerticalAlignment="Bottom" Height="10" Grid.Row="0"/>

                            <TextBlock Text="{Binding LaTeX, FallbackValue='Debug: Bilgi Yok'}"
                                       TextWrapping="Wrap"
                                       FontStyle="Italic"
                                       Grid.Row="1"
                                       Margin="50,10,5,5"
                                       Padding="5"/>

                            <StackPanel Grid.Row="2">

                                <Label Content="Cevaplanan : "/>
                                <TextBlock Text="{Binding Cevaplanan}" Foreground="{Binding TabBrush, FallbackValue='Black'}" TextWrapping="Wrap" Margin="15,5,5,20" FontSize="15" FontWeight="Bold"/>

                                <Label Content="Cevap : "/>
                                <TextBlock Text="{Binding Sonuc}" TextWrapping="Wrap" Margin="15,5,5,20" FontSize="15" FontWeight="Bold"/>

                                <Label Content="Diğer : "/>
                                <ListBox ItemsSource="{Binding DigerSecenekler}" Margin="15,5,5,20" Background="{x:Null}" FontSize="15" FontWeight="Bold">

                                </ListBox>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>